<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity1"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_palembang_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="60dp"
        android:text="Palembang\nWater"
        android:textColor="#F4DFBA"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_menyediakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Menyediakan air bersih, sehat dan terjaga\nkualitasnya"
        android:textColor="#F4DFBA"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_palembang_water"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup"
        android:layout_width="0dp"
        android:layout_marginBottom="320dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textStyle="bold"
        android:padding="16dp"
        android:textSize="17sp"
        android:textColor="#B4CDE6"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        android:backgroundTint="#002E94"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_marginBottom="240dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        android:text="LOG IN"
        android:textStyle="bold"
        android:padding="16dp"
        android:textSize="17sp"
        android:textColor="#002E94"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        android:backgroundTint="#F4DFBA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_visitus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="85dp"
        android:text="Visit us"
        android:textColor="#F4DFBA"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_www"
        android:layout_width="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="16dp"
        android:layout_height="wrap_content"
        android:text="WWW.PALEMBANG.GO.ID"
        android:textStyle="bold"
        android:padding="16dp"
        android:textSize="17sp"
        android:textColor="#002E94"
        android:textAllCaps="false"
        app:cornerRadius="16dp"
        android:backgroundTint="#F4DFBA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>